  "title": "Shibboleth IdP - 광주여대 로그 분석",
  "tags": ["shibboleth", "authentication", "audit", "loki"],
  "panels": [
    {
      "id": 1,
      "title": "최근 로그인 현황",
      "type": "stat",
      "targets": [
        {
          "datasource": {
            "type": "loki",
            "uid": "${DS_LOKI}"
          },
          "expr": "count_over_time({job=\"shibboleth-audit\"}[1h])",
          "legendFormat": "최근 1시간",
          "refId": "A"
        },
        {
          "datasource": {
            "type": "loki", 
            "uid": "${DS_LOKI}"
          },
          "expr": "count_over_time({job=\"shibboleth-audit\"}[24h])",
          "legendFormat": "최근 24시간",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "short",
          "decimals": 0
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "로그인 추이 (시간별)",
      "type": "timeseries",
      "targets": [
        {
          "datasource": {
            "type": "loki",
            "uid": "${DS_LOKI}"
          },
          "expr": "sum(rate({job=\"shibboleth-audit\"}[5m]))",
          "legendFormat": "로그인 수",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "reqps"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      }
    },
    {
      "id": 3,
      "title": "사용자별 로그인 횟수 (TOP 10)",
      "type": "table",
      "targets": [
        {
          "datasource": {
            "type": "loki",
            "uid": "${DS_LOKI}"
          },
          "expr": "topk(10, count by (principal) (count_over_time({job=\"shibboleth-audit\"} [24h])))",
          "legendFormat": "{{principal}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "displayMode": "list"
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      }
    },
    {
      "id": 4,
      "title": "서비스별 이용 현황",
      "type": "piechart",
      "targets": [
        {
          "datasource": {
            "type": "loki",
            "uid": "${DS_LOKI}"
          },
          "expr": "count by (relying_party) (count_over_time({job=\"shibboleth-audit\"} [24h]))",
          "legendFormat": "{{relying_party}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "short"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      }
    },
    {
      "id": 5,
      "title": "인증 방법별 분석",
      "type": "stat",
      "targets": [
        {
          "datasource": {
            "type": "loki",
            "uid": "${DS_LOKI}"
          },
          "expr": "count by (auth_method) (count_over_time({job=\"shibboleth-audit\"} [24h]))",
          "legendFormat": "{{auth_method}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "short"
        }
      },
      "gridPos": {
        "h": 6,
        "w": 24,
        "x": 0,
        "y": 16
      }
    },
    {
